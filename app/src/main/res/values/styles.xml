<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BenefitTextCard">
        <item name="android:background">@drawable/benefits_background</item>
        <item name="android:fontFamily">@font/sf_pro_display_med_500</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AdditionalButtonsArrowBack">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
    </style>

    <style name="AdditionalTitleText">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:fontFamily">@font/sf_pro_display_med_500</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdditionalSubtitleText">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:fontFamily">@font/sf_pro_display_med_500</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/only_necessary</item>
    </style>

    <style name="MainNavigationButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="backgroundTint">@color/navigation_button_color</item>
        <item name="android:fontFamily">@font/sf_pro_display_med_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BenefitCustomChip">
        <item name="android:backgroundTint">@color/background_light_grey</item>
        <item name="android:fontFamily">@font/sf_pro_display_med_500</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="AddressTextStyle">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:fontFamily">@font/sf_pro_display_med_500</item>
        <item name="android:textColor">@color/blue_link_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Rooms screen-->

    <style name="TopBarTitle">
        <item name="android:fontFamily">@font/sf_pro_display_med_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BookingTextDescription">
        <item name="android:fontFamily">@font/sf_pro_display_reg_400</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BookingTextData">
        <item name="android:fontFamily">@font/sf_pro_display_reg_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomEditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_display_reg_400</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CustomEditTextLayout">

        <item name="android:textColorHint">@color/grey_text_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_close</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/grey_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>